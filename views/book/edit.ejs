<main>
    <!-- Content For The Edit Page -->
    <div class = "container mt-5"> 
        <div class = "row justify-content-center">
            <div class = "col-md-6">
                <div class = "card">
                    <div class = "card-header">
                        <h1 class = "mb-0">Edit Book</h1>
                    </div>
                    <div class = "card-body">
                        <form method = "post">
                            <div class = "form-group">
                                <label for = "NameTextField">Book Title</label>
                                <input type = "text" class = "form-control"
                                    id = "NameTextField"
                                    placeholder = "Enter The Book Title"
                                    Name = "Name" 
                                    value = "<%= book.Name%>"
                                    required>
                            </div>

                            <div class = "form-group">
                                <label for = "AuthorTextField">Author</label>
                                <input type = "text" class = "form-control"
                                    id = "AuthorTextField"
                                    placeholder = "Enter The Author"
                                    Name = "Author" 
                                    value = "<%= book.Author%>"
                                    required>
                            </div>

                            <div class = "form-group">
                                <label for = "PublishedTextField">Published Year</label>
                                <input type = "text" class = "form-control"
                                    id = "PublishedTextField"
                                    placeholder = "Enter The Year Published"
                                    Name = "Published" 
                                    value = "<%= book.Published%>"
                                    required>
                            </div>

                            <div class = "form-group">
                                <label for = "DescriptionTextField">Description</label>
                                <textarea type = "text" class = "form-control"
                                    id = "DescriptionTextField"
                                    placeholder = "Enter The Description"
                                    Name = "Description" required>
                                    <%= book.Description%></textarea>
                            </div>

                            <div class = "form-group">
                                <label for = "PriceTextField">Price</label>
                                <input type = "text" class = "form-control"
                                    id = "PriceTextField"
                                    placeholder = "Enter The Price"
                                    Name = "Price" 
                                    value = "<%= book.Price%>"
                                    required>
                            </div>
                            <br>

                            <div class = "form-group">
                                <button type ="submit" class = "btn btn-primary">
                                    <i class = "fas fa-save"></i> Save Changes
                                </button>

                                <a href = "/book-list" class = "btn btn-secondary">
                                    <i class = "fas fa-undo"></i>Cancel 
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
